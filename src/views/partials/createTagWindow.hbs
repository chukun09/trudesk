<div class="uk-modal" id="createTagModal" ng-controller="commonCtrl">
    <div class="uk-modal-dialog">
        <form class="uk-form-stacked" id="createTagForm" ng-submit="createTag('{{page}}', $event)">
            <div class="">
                <h2 class="nomargin mb-5">Tạo Thẻ</h2>
                <p class="uk-text-small uk-text-muted">Thẻ phân loại các yêu cầu, giúp dễ dàng xác định vấn đề</p>

                <label for="typeName">Tên Thẻ</label>
                <input type="text" class="md-input" id="tagName" name="tagName"
                       data-validation="length"
                       data-validation-length="min2"
                       data-validation-error-msg="Vui lòng nhập tên thẻ hợp lệ. Tên thẻ phải chứa ít nhất 2 ký tự." />
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn md-btn-flat uk-modal-close">Đóng</button>
                <button type="submit" class="md-btn md-btn-flat md-btn-flat-success" id="submitCreateTagBtn">Tạo</button>
            </div>
        </form>
    </div>
</div>
