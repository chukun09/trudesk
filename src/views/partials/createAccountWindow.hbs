<div class="uk-modal" id="accountCreateModal">
    <div class="uk-modal-dialog nopadding">
        <div class="user-heading" style="min-height: 130px; background: #1976d2; padding: 24px;">
            <div style="width: 100%;">
                <div class="" style="width: 82px; height: 82px; float: left; margin-right: 24px; position: relative;">
                    <div class="mediumProfilePic" style="position: relative;">
                        <img src="/uploads/users/defaultProfile.jpg" alt="Ảnh Hồ Sơ" style=""/>
                    </div>
                </div>
                <div class="user-heading-content">
                    <h2>
                        <span class="uk-text-truncate">Tạo Tài Khoản</span>
                        <span class="sub-heading">Vui lòng cung cấp chi tiết tài khoản bên dưới</span>
                    </h2>
                </div>
            </div>
        </div>
        <div style="margin: 24px;">
            <form class="uk-form-stacked" id="createAccountForm" action="#" method="POST">
                <input type="hidden" name="socketId" id="ca_socketId" value="{{data.user.socket.id}}" />
                <div class="uk-margin-medium-bottom">
                    <label for="aUsername">Tên Người Dùng</label>
                    <input type="text" class="md-input" id="caUsername" name="aUsername"
                           data-validation="length"
                           data-validation-length="min5"
                           data-validation-error-msg="Vui lòng nhập tên người dùng hợp lệ. Tên người dùng phải dài ít nhất 5 ký tự."
                    />
                </div>
                <div class="uk-margin-medium-bottom uk-clearfix">
                    <div class="left" style="width: 50%; padding-right: 20px">
                        <label for="aFullname">Tên</label>
                        <input type="text" class="md-input" id="caFullname" name="aFullname"
                               data-validation="length"
                               data-validation-length="min4"
                               data-validation-error-msg="Vui lòng nhập tên hợp lệ. Tên phải dài ít nhất 4 ký tự."
                        />
                    </div>
                    <div class="left" style="width: 50%;">
                        <label for="aTitle" class="uk-form-label">Chức Vụ</label>
                        <input type="text" class="md-input" id="caTitle" name="aTitle"/>
                    </div>
                </div>
                <div class="uk-margin-medium-bottom uk-clearfix">
                    <div class="left" style="width: 50%; padding-right: 20px;">
                        <label for="aPass" class="uk-form-label">Mật Khẩu</label>
                        <input type="password" class="md-input" id="caPass" name="aPass"
                               data-validation="length"
                               data-validation-length="min6"
                        />
                    </div>
                    <div class="left" style="width: 50%;">
                        <label for="aPassConfirm" class="uk-form-label">Xác Nhận Mật Khẩu</label>
                        <input type="password" class="md-input" id="caPassConfirm" name="aPassConfirm"
                               data-validation="confirmation"
                               data-validation-confirm="aPass"
                               data-validation-error-msg="Các trường mật khẩu không khớp."
                        />
                    </div>
                </div>
                <div class="uk-margin-medium-bottom">
                    <label for="aEmail" class="uk-form-label">Email</label>
                    <input type="email" class="md-input" id="caEmail" name="aEmail"
                           data-validation="email"
                           data-validation-error-msg="Vui lòng nhập địa chỉ email hợp lệ."
                    />
                </div>
                <div class="uk-margin-medium-bottom">
                    <label for="aRole" class="uk-form-label">Vai Trò</label>
                    <select class="selectize" name="aRole" id="caRole" data-md-selectize-inline>
                        <!-- Vòng lặp chọn vai trò -->
                        {{#each data.common.roles}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="uk-margin-medium-bottom">
                    <label for="caGrps" class="uk-form-label">Nhóm</label>
                    <select multiple="multiple" class="multiselect" id="caGrps" name="caGrps[]">
                        <!-- Vòng lặp chọn nhóm -->
                        {{#each data.allGroups}}
                            <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <span class="aGrps-error-message hide help-block uk-form-danger">Vui lòng chọn một nhóm cho người dùng này.</span>
                </div>
                <div class="uk-modal-footer uk-text-right">
                    <button type="button" class="md-btn md-btn-flat uk-modal-close">Đóng</button>
                    <button type="submit" class="md-btn md-btn-flat md-btn-flat-primary" ng-click="createAccount($event)">Tạo Tài Khoản</button>
                </div>
            </form>
        </div>
    </div>
</div>
