<div id="newMessageModal" class="uk-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <div class="uk-modal-dialog">
        <a class="uk-close uk-modal-close no-ajaxy" aria-label="Close"></a>

        <h2 id="modalTitle" class="uk-margin-medium-bottom">Tin nhắn mới</h2>
        <div class="uk-clearfix">
            <form id="newMessageForm" action="#" method="POST" class="uk-form-stacked">
                <input type="hidden" name="from" value="{{data.user._id}}"/>
                <label for="newMessageTo" class="uk-form-label">Đến:</label>
                <select name="newMessageTo" id="newMessageTo" multiple class="selectize uk-margin-medium-bottom"
                        data-md-selectize-inline
                        data-md-selectize-bottom="true"
                        data-md-selectize-closeOnSelect="true">
                    {{#each data.common.messages.users}}
                        <option value="{{_id}}">{{fullname}}</option>
                    {{/each}}
                </select>

                <div class="uk-margin-medium-bottom">
                    <label for="newMessageSubject" class="uk-form-label">Chủ đề:</label>
                    <input class="md-input" id="newMessageSubject" name="newMessageSubject" type="text"
                           data-validation="length"
                           data-validation-length="min10"
                           data-validation-error-msg="Vui lòng nhập chủ đề hợp lệ. Chủ đề phải chứa ít nhất 10 ký tự."/>
                </div>

                <div class="uk-margin-medium-bottom">
                    <label for="newMessageText" class="uk-form-label">Tin nhắn:</label>
                    <textarea class="md-input" name="newMessageText" id="newMessageText" cols="30" rows="10"
                        data-validation="length"
                              data-validation-length="min10"
                              data-validation-error-msg="Vui lòng nhập tin nhắn hợp lệ. Tin nhắn phải chứa ít nhất 10 ký tự."
                    ></textarea>

                    <div class="right">
                        <button class="eh-sendNewMessageButton md-btn md-btn-flat md-btn-flat-primary md-btn-wave nomargin" type="submit">Gửi tin nhắn</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>