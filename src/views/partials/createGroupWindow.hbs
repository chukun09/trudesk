<div class="uk-modal" id="groupCreateModal">
    <div class="uk-modal-dialog">
        <form class="uk-form-stacked" id="createGroupForm" action="#" method="POST">
            <div class="uk-margin-medium-bottom">
                <label for="gName">Tên Nhóm</label>
                <input type="text" class="md-input" id="gName" name="gName"/>
            </div>
            <div class="uk-margin-small-bottom">
                <label for="gMembers" class="uk-form-label nopadding">Thành Viên</label>
                <select class="selectize" name="gMembers" id="gMembers" multiple data-md-selectize-inline data-md-selectize-bottom="true">
                    <!-- Vòng lặp chọn thành viên -->
                    {{#each data.users}}
                        <option value="{{id}}">{{fullname}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="uk-margin-small-bottom">
                <label for="gSendMailTo" class="uk-form-label nopadding">Gửi Mail Đến</label>
                <select name="gSendMailTo" id="gSendMailTo" class="selectize" multiple data-md-selectize-inline data-md-selectize-bottom="true">
                    <!-- Vòng lặp chọn người nhận mail -->
                    {{#each data.users}}
                        <option value="{{_id}}">{{fullname}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn md-btn-flat uk-modal-close">Đóng</button>
                <button type="button" class="md-btn md-btn-flat md-btn-flat-primary" id="submitNewGroup" ng-click="createGroup()">Tạo Nhóm</button>
            </div>
        </form>
    </div>
</div>
