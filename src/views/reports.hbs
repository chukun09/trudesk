<div class="small-12 large-10 columns nopadding ticketContent" ng-controller="groupsCtrl">
    <div class="page-title noshadow no-border-bottom">
        <p class="left">{{title}}</p>
        <div class="right">
            <ul class="button-group">
                <li class="active" style="position:relative;">
                    <a href="#" class="btn no-ajaxy" data-notifications="group-actions">Hành động</a>
                    <div id="group-actions" data-scroll="gAction-list" data-override="true" data-top-offset="60" data-left-offset="-65" class="notifications p-dropdown p-dropdown-xsmall pSmall">
                        <div class="actions"><strong>Thao tác Báo cáo</strong></div>
                        <div id="gAction-list" class="notifications-Messages">
                            <ul>
                                <li>
                                    <a class="messageNotification no-ajaxify" href="#" role="button" ng-click="deleteGroups()">
                                        <div class="clearfix">
                                            <div class="messageIcon left"><i class="fa fa-trash-o"></i></div>
                                            <div class="messageAuthor"><strong>Xóa</strong></div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                {{#canUser data.user "reports:create"}}<li class="active"><a href="/reports/create" role="button" class="btn">Tạo</a></li>{{/canUser}}
            </ul>
        </div>
    </div>
    <div class="full-height page-right-content scrollable">
        <div class="reportList">
            <table id="reportTable" class="pDataTable stripe">
                <thead>
                    <tr>
                        <th></th>
                        <th>Tên</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.groups}}
                        <tr ng-click="editGroup($event)" data-groupOId="{{_id}}">
                            <td>
                                <input id="c_{{_id}}" type="checkbox"/>
                                <label for="c_{{_id}}"></label>
                            </td>
                            <td>{{name}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{#contentFor 'js-plugins'}}
{{/contentFor}}
