<div class="uk-grid uk-grid-collapse nopadding reportsOverview" ng-controller="reportsCtrl">
    <div class="uk-width-1-1 page-title">
        <p class="left uk-margin-medium-left">{{title}}</p>

        <div class="right clearfix" style="min-width: 250px;">
            <div style="margin-top: 8px;">
                <select id="select_timespan" name="select_timespan" data-md-selectize>
                    <option value="30" selected>30 Ngày Qua</option>
                    <option value="60">60 Ngày Qua</option>
                    <option value="90">90 Ngày Qua</option>
                    <option value="180">180 Ngày Qua</option>
                    <option value="365">365 Ngày Qua</option>
                </select>
            </div>
        </div>

        <div id="lastUpdated" class="right uk-text-muted uk-text-small" style="margin:23px 25px 0 0;"><strong>Cập Nhật Lần Cuối:</strong> <span>Đang Tải Bộ Đệm...</span></div>
    </div>

    <div class="uk-width-1-1 full-height page-content scrollable">
        <div id="page-content-inner">
            <div class="uk-grid uk-grid-medium uk-margin-medium-bottom">
                <div class="uk-width-1-3">
                    <div class="panel trupanel nopadding tru-card-intro" style="min-height: 85px;">
                        <div class="tru-card-content">
                            <div class="right uk-margin-top uk-margin-small-right">
                                <span class="peity-bar">5,3,9,6,5,9,7</span>
                            </div>
                            <span class="uk-text-muted uk-text-small">Tổng Số Tickets (30 ngày qua)</span>

                            <h2 class="uk-margin-remove">
                                <span id="ticketCount">--</span>
                            </h2>
                        </div>

                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="panel trupanel nopadding tru-card-intro" style="min-height: 85px;">
                        <div class="tru-card-content">
                            <div class="right uk-margin-top uk-margin-small-right">
                                <span id="pie_complete" class="peity-pie">0/100</span>
                            </div>
                            <span class="uk-text-muted uk-text-small">Tickets Hoàn Thành</span>

                            <h2 class="uk-margin-remove">
                                <span id="text_complete">--</span>%
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="uk-width-1-3">
                    <div class="panel trupanel nopadding tru-card-intro" style="min-height: 85px;">
                        <div class="tru-card-content">
                            <div class="right uk-margin-top uk-margin-small-right">
                                <span id="responseTime_graph" class="peity-line">5,3,9,6,5,9,7,3,5,2</span>
                            </div>
                            <span class="uk-text-muted uk-text-small">Thời Gian Phản Hồi Trung Bình</span>

                            <h2 class="uk-margin-remove">
                                <span id="responseTime_text">--</span> giờ
                            </h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="breakdown-wrap uk-margin-medium-bottom">
                <div class="panel trupanel nopadding no-hover-shadow" style="min-height: 300px;">
                    <div class="left">
                        <h6 style="padding: 15px; margin: 0; font-size: 14px;">Phân Tích Chi Tiết Tickets</h6>
                    </div>
                    <div class="right" style="position:relative;">
                        <button class="action-link"><i class="material-icons">refresh</i></button>
                    </div>
                    <hr class="nomargin-top">
                    <div class="panel-body2">
                        <div id="test" class="mGraph mGraph-panel">

                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-grid uk-margin-medium-bottom">
                <div class="uk-width-1-2">
                    <div class="panel trupanel nopadding" style="min-height: 265px;">
                        <h6 style="padding: 15px; margin: 0; font-size: 14px;">Top 5 Nhóm</h6>
                        <hr class="nomargin">
                        <div id="pieChart"></div>
                    </div>
                </div>
                <div class="uk-width-1-2">
                    <div class="panel trupanel nopadding" style="min-height: 265px;">
                        <h6 style="padding: 15px; margin: 0; font-size: 14px;">Top 10 Thẻ</h6>
                        <hr class="nomargin">
                        <div class="" style="padding: 10px;">
                            <div id="topTenTags" style="width: 100%;"></div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>



{{#contentFor 'js-plugins'}}

{{/contentFor}}
